#!/bin/bash

# Cargar la URL base de la API
source curl-scripts/set-API-URL.sh

# Variable global para almacenar el ID del viaje creado
VIAJE_ID=""
ruta_id="ruta-55555"
minibus_id="minibus-1"

crear_viaje() {
    echo -e "\nğŸ”¹ Creando un nuevo viaje (POST /viajes)"
    VIAJE_RESPONSE=$(curl -s -X POST "$API_URL/viajes" \
        -H "Content-Type: application/json" \
        -d '{
            "rutaId": "ruta-12345",
            "minibusId": "minibus-67890",
            "paradasDeRuta": [
                {
                    "id": "parada-001",
                    "parada": {
                        "id": "parada-001",
                        "nombre": "Parada A",
                        "direccion": "Calle 1"
                    },
                    "posicion": 1,
                    "horario": "08:00"
                },
                {
                    "id": "parada-002",
                    "parada": {
                        "id": "parada-002",
                        "nombre": "Parada B",
                        "direccion": "Calle 2"
                    },
                    "posicion": 2,
                    "horario": "09:00"
                }
            ],
            "estado": "programado",
            "fechaInicio": "2025-02-25T08:00:00Z"
        }')

    echo "ğŸ”¹ Respuesta: $VIAJE_RESPONSE"

    # Extraer ID del viaje
    VIAJE_ID=$(echo "$VIAJE_RESPONSE" | jq -r '.id')

    if [ "$VIAJE_ID" == "null" ] || [ -z "$VIAJE_ID" ]; then
        echo "âŒ Error al crear el viaje."
        exit 1
    fi

    echo "âœ… Viaje creado con ID: $VIAJE_ID"
}

crear_tres_viajes_misma_ruta() {
    
    
    for i in {1..3}; do
        echo -e "\nğŸ”¹ Creando viaje $i con ruta ID $ruta_id (POST /viajes)"
        VIAJE_RESPONSE=$(curl -s -X POST "$API_URL/viajes" \
            -H "Content-Type: application/json" \
            -d "{
                \"rutaId\": \"$ruta_id\",
                \"minibusId\": \"minibus-1\",
                \"paradasDeRuta\": [
                    {
                        \"id\": \"parada-001\",
                        \"parada\": {
                            \"id\": \"parada-001\",
                            \"nombre\": \"Parada A\",
                            \"direccion\": \"Calle 1\"
                        },
                        \"posicion\": 1,
                        \"horario\": \"08:00\"
                    },
                    {
                        \"id\": \"parada-002\",
                        \"parada\": {
                            \"id\": \"parada-002\",
                            \"nombre\": \"Parada B\",
                            \"direccion\": \"Calle 2\"
                        },
                        \"posicion\": 2,
                        \"horario\": \"09:00\"
                    }
                ],
                \"estado\": \"programado\",
                \"fechaInicio\": \"2025-02-$((24 + i))T08:00:00Z\"
            }")

        echo "ğŸ”¹ Respuesta: $VIAJE_RESPONSE"

        VIAJE_ID=$(echo "$VIAJE_RESPONSE" | jq -r '.id')

        if [ "$VIAJE_ID" == "null" ] || [ -z "$VIAJE_ID" ]; then
            echo "âŒ Error al crear el viaje $i."
            exit 1
        fi

        echo "âœ… Viaje $i creado con ID: $VIAJE_ID"
    done
}

obtener_viaje() {
    if [ -z "$VIAJE_ID" ]; then
        echo "âŒ No hay un VIAJE_ID definido."
        exit 1
    fi
    echo -e "\nğŸ”¹ Obteniendo viaje con ID $VIAJE_ID (GET /viajes/$VIAJE_ID)"
    curl -s -X GET "$API_URL/viajes/$VIAJE_ID" | jq .
}

listar_viajes() {
    echo -e "\nğŸ”¹ Listando todos los viajes (GET /viajes)"
    curl -s -X GET "$API_URL/viajes" | jq .
}

# Uso: listar_viajes_por_ruta "ID_RUTA"
listar_viajes_por_ruta() {
    # local ruta_id="$1"
    echo -e "\nğŸ”¹ Viajes de la ruta $ruta_id (GET /viajes?rutaId=$ruta_id)"
    curl -s -X GET "$API_URL/viajes?rutaId=$ruta_id" | jq .
}
listar_viajes_por_minibus() {
    # local ruta_id="$1"
    echo -e "\nğŸ”¹ Viajes del minibus $minibus_id (GET viajes?minibusId=$minibus_id)"
    curl -s -X GET "$API_URL/viajes?minibusId=$minibus_id" | jq .
}
actualizar_viaje() {
    if [ -z "$VIAJE_ID" ]; then
        echo "âŒ No hay un VIAJE_ID definido."
        exit 1
    fi
    echo -e "\nğŸ”¹ Actualizando el estado del viaje a 'en curso' (PUT /viajes/$VIAJE_ID)"
    curl -s -X PUT "$API_URL/viajes/$VIAJE_ID" \
        -H "Content-Type: application/json" \
        -d '{
            "estado": "en curso"
        }' | jq .
}

eliminar_viaje() {
    if [ -z "$VIAJE_ID" ]; then
        echo "âŒ No hay un VIAJE_ID definido."
        exit 1
    fi
    echo -e "\nğŸ”¹ Eliminando viaje con ID $VIAJE_ID (DELETE /viajes/$VIAJE_ID)"
    curl -s -X DELETE "$API_URL/viajes/$VIAJE_ID"
    echo "âœ… Viaje eliminado"
}

# Verificar que jq estÃ¡ instalado
if ! command -v jq &> /dev/null
then
    echo "âŒ Error: jq no estÃ¡ instalado. InstÃ¡lalo con 'sudo apt install jq' (Linux) o 'brew install jq' (Mac)."
    exit 1
fi

# Ejecutar todas las pruebas en orden
# crear_viaje
# obtener_viaje
# listar_viajes
crear_tres_viajes_misma_ruta
listar_viajes_por_ruta
listar_viajes_por_minibus
# actualizar_viaje
# eliminar_viaje
